@model ListCRUD.Models.PersonalInfoViewModel.PersonalInfoCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
             <form id="frmPersonalInfo">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="row">
                    <div class="col">
                        <div class="form-group row">
                            <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" type="text">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" type="text">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" placeholder="Email" type="text">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MobileNo" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="MobileNo" class="form-control" placeholder="Mobile No" type="text">
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DateOfBirth" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="DateOfBirth" id="DateOfBirth" class="form-control" placeholder="Date Of Birth" type="date">
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="col">
                        <div class="form-group row">
                            <label asp-for="City" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="City" class="form-control" placeholder="City" type="text">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Country" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="Country" class="form-control" placeholder="Country" type="text">
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PasportNo" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="PasportNo" class="form-control" placeholder="Pasport No" type="text">
                                <span asp-validation-for="PasportNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="NID" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="NID" class="form-control" placeholder="National ID" type="text">
                                <span asp-validation-for="NID" class="text-danger"></span>
                            </div>
                        </div>                                               
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input type="button" value="Save" onclick="SavePersonalInfo()" class="btn btn-info">
                                <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {
        var _Id =@Model.Id;
        if (@Model.Id < 1) {
            $('#DateOfBirth').val(new Date());
        }
    });
</script>
